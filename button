package comm;

import java.awt.Button;

import java.awt.Checkbox;
import java.awt.Frame;
import java.awt.TextField;
import java.awt.event.*;
public class ButtonExample extends Frame implements ActionListener {

	ButtonExample(){
	 Frame f=new Frame("Button Example");  
	 TextField tf = new TextField(10);
	 	tf.setBounds(100, 150,120, 100);
	    Button b = new Button("Click here");  
	    b.setBounds(50,100,80,30);  
	    f.add(b);  //create button
	    f.add(tf);
	    f.setSize(400,400);  //frame size create
	    f.setLayout(null); //button layout 
	    f.setVisible(true);   //to show
	}  
	public void actionPerformed(ActionEvent ae)
	{
		
		TextField tf = null;
		tf.setText("Welcome first example"); 
	}
public static void main(String[] args) {
ButtonExample b1 = new ButtonExample();
}
}
